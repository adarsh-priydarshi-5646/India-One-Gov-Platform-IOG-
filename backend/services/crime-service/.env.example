# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://iog_user:password@localhost:5432/iog_production
DB_POOL_MIN=2
DB_POOL_MAX=10

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017/iog_production
MONGODB_DB=iog_production

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# AWS S3 Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=iog-crime-evidence

# Services
FRAUD_AI_SERVICE_URL=http://localhost:3008
NOTIFICATION_SERVICE_URL=http://localhost:3009

# File Upload
MAX_FILE_SIZE=20485760  # 20MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf,video/mp4

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# CORS
CORS_ORIGIN=http://localhost:3000,https://iog.gov.in

# Logging
LOG_LEVEL=info
