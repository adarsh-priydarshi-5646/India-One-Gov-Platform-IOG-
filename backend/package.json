{
  "name": "iog-backend",
  "version": "1.0.0",
  "description": "India One-Gov Platform - Backend Microservices",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:complaint\" \"npm run dev:crime\"",
    "dev:auth": "cd services/auth-service && npm run dev",
    "dev:complaint": "cd services/complaint-service && npm run dev",
    "dev:crime": "cd services/crime-service && npm run dev",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "workspaces": [
    "services/*",
    "shared"
  ],
  "keywords": [
    "governance",
    "india",
    "digital-transformation",
    "microservices"
  ],
  "author": "Government of India - IOG Team",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  }
}
