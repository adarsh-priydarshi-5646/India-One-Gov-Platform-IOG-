# Server Configuration
PORT=3002
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://iog_user:password@localhost:5432/iog_production
DB_POOL_MIN=2
DB_POOL_MAX=10

# MongoDB Configuration (for evidence files)
MONGODB_URL=mongodb://localhost:27017/iog_production
MONGODB_DB=iog_production

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS S3 Configuration (for file storage)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=iog-evidence-files
AWS_S3_ENDPOINT=

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Fraud AI Service
FRAUD_AI_SERVICE_URL=http://localhost:3008

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf,video/mp4

# Auto-Assignment Configuration
AUTO_ASSIGN_ENABLED=true
ESCALATION_DAYS=7

# Notification Service
NOTIFICATION_SERVICE_URL=http://localhost:3009

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://iog.gov.in

# Logging
LOG_LEVEL=info
